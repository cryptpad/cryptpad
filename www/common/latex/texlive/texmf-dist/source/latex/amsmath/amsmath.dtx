%    \cs{tag} and \cs{label} are enabled only during the measuring
%    phase and disabled during the production phase.
%    Here we disable \cs{tag} and \cs{label}; \cs{mmeasure@} will
%    re-enable them temporarily.
%    \begin{macrocode}
