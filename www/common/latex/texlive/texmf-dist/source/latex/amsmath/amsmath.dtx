}
%    \end{macrocode}
%
%    \begin{macrocode}
\def\print@eqnum{\tagform@\theequation}
\def\incr@eqnum{\refstepcounter{equation}\let\incr@eqnum\@empty}
%    \end{macrocode}
%  \end{macro}
