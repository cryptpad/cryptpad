% \changes{v1.8k}{2015/03/21}{Use \cs{@Mv} and not \cs{break} in case
%   this forced break is not used on this page}
%    \begin{macrocode}
   \setbox\mult@box\vbox{%
       \ifvoid\colbreak@box\else
         \unvbox\colbreak@box
         \penalty-\@Mv
         \mult@info\@ne{Re-adding
           forced break(s) in balancing}%
       \fi
       \unvbox\@cclv
%    \end{macrocode}
