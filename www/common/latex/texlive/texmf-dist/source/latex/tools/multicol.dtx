%    |\iftoo@bad| is set to true.
% \changes{v1.8a}{2011/12/20}{Balancing concept improved}
%    \begin{macrocode}
   \iftoo@bad
     \mult@info\@ne
        {Balancing failed ...
         cut a normal page}%
%    \end{macrocode}
